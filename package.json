{
    "name": "unitestingtask",
    "version": "0.0.1",
    "description": "Unit testing task",
    "scripts": {
        "test": "jest"
    },
    "jest": {
        "collectCoverage": true,
        "coverageReporters": [
            "text-summary"
        ],
        "collectCoverageFrom": [
            "./unitTestingTask.js",
            "!**/node_modules/**",
            "!**/vendor/**"
        ],
        "coverageThreshold": {
            "./unitTestingTask.js": {
                "functions": 80
            }
        }
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "prettier": "2.8.8"
    }
}
